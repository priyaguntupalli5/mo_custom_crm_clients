<?xml version="1.0" encoding="utf-8"?>
 <odoo>
     <!-- Main Client Form Template -->
     <template id="client_form" name="Client Form">
         <t t-call="website.layout">
             <div class="container mt-5">
                 <h1>New Client Form</h1>
                 <form action="/crm/client/save_temp" method="post" class="form-horizontal">
                     <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                     <div class="form-group">
                         <label for="name">Name:</label>
                         <input type="text" class="form-control" id="name" name="name" required="required"/>
                     </div>
                     <div class="form-group">
                         <label for="email">Email:</label>
                         <input type="email" class="form-control" id="email" name="email" required="required"/>
                     </div>
                     <div class="form-group">
                         <label for="phone">Phone:</label>
                        <input type="text" class="form-control" id="phone" name="phone" required="required"/>
                     </div>
                     <div class="form-group">
                         <label for="household">Household Type:</label>
                         <select class="form-control" id="household" name="household" required="required">
                             <option value="individual">Individual</option>
                             <option value="family">Family</option>
                         </select>
                    </div>
                     <div class="text-center">
                         <button type="submit" class="btn btn-primary">Submit</button>
                     </div>
                 </form>
            </div>
         </t>
     </template>

     <!-- Add Family Member Form Template -->
     <template id="add_family_member_form" name="Add Family Member Form">
         <t t-call="website.layout">
            <div class="container mt-5">
                 <h1>Add Family Member</h1>
                 <form action="/crm/client/add_family_member" method="post" class="form-horizontal">
                     <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                     <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" class="form-control" id="name" name="name" required="required"/>
                     </div>
                     <div class="text-center">
                         <button type="submit" class="btn btn-primary">Add Member</button>
                     </div>
                 </form>
             </div>
        </t>
    </template>
 </odoo>
