<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="error_template" name="Error Template">
        <t t-call="website.layout">
            <div class="container">
                <h1>An Error Occurred</h1>
                <p>An error occurred during form submission:
                    <t t-esc="error"/>
                </p>
                <a href="/crm/family/create" class="btn btn-primary">Go Back to Form</a>
            </div>
        </t>
    </template>
</odoo>
