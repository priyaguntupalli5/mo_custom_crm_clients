<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="action_open_client_form" model="ir.actions.act_window">
        <field name="name">Create Client</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.client</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_family_id': active_id}</field>
    </record>

    <record id="view_client_tree" model="ir.ui.view">
        <field name="name">crm.client.tree</field>
        <field name="model">crm.client</field>
        <field name="arch" type="xml">
            <tree string="Clients">
                <field name="client_id"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="household"/>
            </tree>
        </field>
    </record>


    <record id="view_client_form" model="ir.ui.view">
        <field name="name">crm.client.form</field>
        <field name="model">crm.client</field>
        <field name="arch" type="xml">
            <form string="Client">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Brandom Freeman"/>
                        </h1>
                        <h2>
                            <field name="parent_id" placeholder="Company Name..."/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="client_id" readonly="1"/>
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="city"/>
                            <field name="state_id" class="oe_no_button" options="{'no_create': True}"/>
                            <field name="zip"/>
                            <field name="country_id" class="oe_no_button" options="{'no_create': True}"/>
                            <field name="family_id" invisible="1"/>
                            <field name="household" widget="radio" attrs="{'invisible': [('family_id', '!=', False)]}"/>
                            <field name="immigration_status"/>
                            <button name="%(action_open_client_form)d" type="action"
                                    string="Add Family Member" class="oe_highlight"
                                    attrs="{'invisible': [('household', '!=', 'family')]}"/>
                        </group>
                        <group>
                            <field name="function" string="Job Position"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email"/>
                            <field name="website"/>
                            <field name="title" options="{'no_create': True}"/>
                            <field name="lang"/>
                            <field name="referred_by" placeholder="Referred By e.g., John Doe"/>
                            <field name="category_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_client" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.client</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first client</p>
            <p>This is the client list, where you can manage your clients.</p>
        </field>
    </record>

</odoo>

